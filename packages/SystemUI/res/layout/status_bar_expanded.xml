<com.android.systemui.statusbar.phone.NotificationPanelView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res/com.android.systemui"
    android:id="@+id/notification_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    >

    <include
        layout="@layout/carrier_label"
        android:layout_height="@dimen/carrier_label_height"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/close_handle_height"
        android:layout_gravity="bottom"
        android:visibility="gone" />

    <include
        layout="@layout/keyguard_status_view"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/emergency_calls_only"
        android:textAppearance="@style/TextAppearance.StatusBar.Expanded.Network.EmergencyOnly"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="@dimen/systemui_size_four"
        android:gravity="center"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="@dimen/notification_panel_width"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:layout_gravity="@integer/global_notification_panel_layout_gravity"
        android:id="@+id/notification_container_parent"
        android:orientation="vertical"
        android:background="@drawable/qs_background_primary"
        android:clipToPadding="false"
        android:clipChildren="false">

        <!-- start of notification panel -->
        <LinearLayout
            android:layout_width="@dimen/notification_panel_width"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="@dimen/notification_panel_width"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/systemui_size_fortyeight" />

                <com.android.systemui.statusbar.stack.NotificationStackScrollLayout
                    android:id="@+id/notification_stack_scroller"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/notification_panel_height"
                    android:layout_marginBottom="@dimen/close_handle_underlap"
                    android:importantForAccessibility="no" />

            </FrameLayout>
        </LinearLayout>
        <!-- end of notification panel -->

        <!-- start of print panel -->
        <LinearLayout
            android:layout_width="@dimen/notification_panel_width"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/systemui_size_fortyeight"
                android:padding="@dimen/systemui_size_eight"
                android:background="#1Affffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/systemui_size_sixteen"
                    android:layout_centerVertical="true"
                    android:text="@string/print_message"
                    android:textColor="#99ffffff"
                    android:textStyle="bold"
                    android:textSize="@dimen/systemui_textsize_sixteen" />

                <Button
                    android:id="@+id/printManager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/systemui_size_sixteen"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/systemui_size_eight"
                    android:background="@null"
                    android:text="@string/print_manager"
                    android:textSize="@dimen/systemui_textsize_twelve" />

            </RelativeLayout>

            <!-- printer job layout -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/systemui_size_eight"
                android:layout_height="@dimen/systemui_size_twohundred" >
                <LinearLayout
                    android:id="@+id/printer_job_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

            </ScrollView>

        </LinearLayout>
        <!-- end of print panel -->

        <!-- start of quick setting panel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical">
            <include
                layout="@layout/qs_panel"
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:layout_height="@dimen/systemui_size_hundred" />

            <!-- A view to reserve space for the collapsed stack -->
            <!-- Layout height: notification_min_height + bottom_stack_peek_amount -->
            <View
                android:id="@+id/reserve_notification_space"
                android:layout_height="@dimen/systemui_size_zero"
                android:layout_width="match_parent"
                android:visibility="gone" />

            <!--<View
                android:layout_height="@dimen/systemui_size_zero"
                android:layout_width="match_parent"
                android:visibility="gone" /> -->
        </LinearLayout>
        <!-- end of quick setting panel -->

        <com.android.systemui.statusbar.phone.ObservableScrollView
            android:id="@+id/scroll_view"
            android:layout_width="@dimen/notification_panel_width"
            android:layout_height="@dimen/systemui_size_zero"
            android:layout_gravity="bottom|center"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:fillViewport="true"
            android:visibility="gone">
        </com.android.systemui.statusbar.phone.ObservableScrollView>

        <ViewStub
            android:id="@+id/keyguard_user_switcher"
            android:layout="@layout/keyguard_user_switcher"
            android:layout_height="@dimen/systemui_size_zero"
            android:layout_width="match_parent"
            android:visibility="gone" />

        <include
            layout="@layout/keyguard_status_bar"
            android:visibility="gone" />

    </LinearLayout>

    <include
            layout="@layout/keyguard_bottom_area"
            android:visibility="gone" />

    <com.android.systemui.statusbar.AlphaOptimizedView
        android:id="@+id/qs_navbar_scrim"
        android:layout_height="@dimen/systemui_size_zero"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:background="@drawable/qs_navbar_scrim" />

</com.android.systemui.statusbar.phone.NotificationPanelView><!-- end of sliding panel -->
